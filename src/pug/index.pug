extends template

prepend page
  - var layout = 'home';
  - var currentPage = 'home';

block content
  .page.page--home
    .page__main-text Aqua Kenzo
    .l-container
      .page__sections
        each item, index in homeScreens
          .home-section(class="home-section--" + (index + 1))
            a.home-section__link(href=item.url)
              .home-section__imgs
                each imgSrc, c in item.images
                  .home-section__img(class="home-section__img--" + (c + 1)): img(src=imgSrc, alt="")
              .home-section__content
                .home-section__text !{item.text}
                .home-section__icon
                  +icon('arrow-right')
      .page__section-indicators
        each item, index in homeScreens
          .indicator(class="indicator--" + (index + 1))