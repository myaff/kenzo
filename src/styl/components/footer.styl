.footer {
  background: transparent;
  color: white;
  font: normal 14px/1.5 $font-util;
  padding: 20px 0;
  text-align: center;
  
  width: 100%;
  
  .layout--home & {
    fixed(0, 0px, 0px);
  
    @media $lgHeight {
      bottom: calc(100vh - 11vh - 570px - 150px);
    }
  }
  
  .layout--detail & {
    background: url('../img/placeholder.jpg') center no-repeat;
    background-size: cover;
    padding: 60px 0 160px;
    
    @media $smWidth {
      padding: (70*100/640)vw 0;
    }
  }
  
  a {
    color: inherit;
    text-decoration: none;
  }
  
  &__text {
    font: 14px/1 $font-base;
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 0.1em;
    @media $smWidth {
      font-size: (20*100/640)vw;
    }
  }
  &__logo {
    display: block;
    size(125px, 30px);
    margin: 1rem auto 0;
    @media $smWidth {
      width: (125*100/640)vw;
      margin: (24*100/640)vw auto 0//;
    }
    
    .icon {
      display: block;
      size(100%);
    }
  }
  
  &__social,
  &__nav {
    margin-bottom: 5rem;
    @media $smWidth {
      max-width: (490*100/640)vw;
      margin: 0 auto (50*100/640)vw;
    }
  }
}