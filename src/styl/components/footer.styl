.footer {
  background: transparent;
  color: white;
  font: normal 14px/1.5 $font-util;
  padding: 20px 0;
  text-align: center;
  fixed(0, 0px, 0px);
  width: 100%;
  
  @media $lgHeight {
    bottom: calc(100vh - 11vh - 570px - 150px);
  }
  
  a {
    color: inherit;
    text-decoration: none;
  }
  
  &__text {
    font: 14px/1 $font-base;
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 0.1em;
    @media $xsWidth {
      font-size: 12px;
    }
  }
  &__logo {
    display: block;
    size(125px, 30px);
    margin: 1rem auto 0;
    @media $msWidth {
      width: 100px;
    }
    
    .icon {
      display: block;
      size(100%);
    }
  }
}