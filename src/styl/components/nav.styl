.nav-menu {
  &__list {
    margin: 0;
    padding: 0;
    list-style: none;
    flexy(center, center);
    
    @media $smWidth {
      flex-wrap: wrap;
    }
  }
  
  &__item {
    margin: 0 0.75rem;
    @media $smWidth {
      margin: (12*100/640)vw (16*100/640)vw;
      
      &:last-child {
        flex: 1 1 100%;
      }
    }
    
    .main-nav & {
      margin: 0 0.5rem;
      @media $lgWidth {
        margin: 0 0.75rem;
      }
    }
  }
  
  &__link {
    display: inline-block;
    color: white;
    text-decoration: none;
    font: normal 14px/1 $font-base;
    border-bottom: 1px solid transparent;
    white-space: nowrap;
    
    {hover-focus-active} {
      color: white;
      border-bottom-color: currentColor;
      outline: 0;
    }
    
    &.disabled {
      opacity: 0.6;
      pointer-events: none;
    }
    
    &.active {
      color: white;
      border-bottom-color: currentColor;
      outline: 0;
    }
  }
}
.main-nav {
  display: none;
  absolute(0px, -4rem);
  width: 100%;
  @media $lgWidth {
    left: 0;
  }
  @media $smWidth {
    fixed(0px, 0px);
    z-index: 8;
    size(100vw, 100vh);
    background: url('../img/placeholder-mobile.jpg') center no-repeat;
    background-size: cover;
    
    .nav-menu {
      size(100%);
      overflow-y: auto;
      padding: 10vmax ($grid-gutter / 2) 5vmax;
      
      &__list {
        display: block;
      }
      &__item {
        padding: 4vmin 0;
      }
      &__link {
        display: inline-block;
        font-size: 5vmin;
      }
    }
  }
  @media $xsHeight {
    .nav-menu {
      padding: 70px ($grid-gutter / 2) 0;
      &__item {
        padding: 2.5vmin 0;
      }
    }
  }
}