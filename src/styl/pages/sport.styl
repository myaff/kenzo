.page {
  &--sport {
    .detail-section {
      &__img {
        img {
          display: block;
          margin: 0 auto;
          
          @media $smWidth {
            width: 100%;
          }
        }
      }
    }
    .detail-section--1 .detail-section {
      &__imgs {
        margin-top: 100px;
        
        @media $smWidth {
          margin-top: (48*100/640)vw;
          margin-bottom: (48*100/640)vw;
          height: (536*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(-70px);
          right: calc(50% + 220px);
          z-index: 3;
          @media $smWidth {
            top: auto;
            right: 0;
            bottom: 0;
            width: (240*100/640)vw;
            z-index: 1;
          }
        }
        &--2 {
          margin: 0 auto;
          left: -5px;
          z-index: 2;
          @media $smWidth {
            absolute((108*100/640)vw);
            right: 0;
            size((460*100/640)vw, (366*100/640)vw);
            overflow: hidden;
            
            img {
              size(auto, 100%);
              absolute(0px, 50%);
              transform: translateX(-50%) scale(-1, 1);
            }
          }
        }
        &--3 {
          absolute(-50px);
          left: calc(50% + 170px);
          z-index: 1;
          @media $smWidth {
            top: 0;
            left: 0;
            width: (440*100/640)vw;
          }
        }
      }
    }
    .detail-section--2 .detail-section {
      &__imgs {
        margin-top: 50px;
        margin-bottom: 50px;
        @media $smWidth {
          margin-top: (38*100/640)vw;
          margin-bottom: (48*100/640)vw;
          height: (570*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(240px);
          right: calc(50% + 230px);
          z-index: 3;
          @media $smWidth {
            top: 0;
            left: auto;
            right: -10vw;
            width: (280*100/640)vw;
            
            img {
              transform: scaleX(-1);
            }
          }
        }
        &--2 {
          margin: 0 auto;
          left: -40px;
          z-index: 2;
          @media $smWidth {
            absolute((70*100/640)vw, (40*100/640)vw);
            right: (40*100/640)vw;
          }
        }
        &--3 {
          absolute(60px);
          left: calc(50% + 170px);
          z-index: 3;
          @media $smWidth {
            top: auto;
            bottom: 0;
            left: -10vw;
            size((470*100/640)vw, (280*100/640)vw);
            z-index: 2;
            transform: rotate(-90deg) translate(-60%, 0);
            transform-origin: top left;
          }
        }
      }
    }
    .detail-section--3 .detail-section {
      &__imgs {
        margin-top: 120px;
        @media $smWidth {
          margin-top: (56*100/640)vw;
          margin-bottom: (32*100/640)vw;
          height: (480*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(-80px);
          right: calc(50% + 250px);
          z-index: 1;
          @media $smWidth {
            top: 0;
            right: 0;
            width: (350*100/640)vw;
            z-index: 1;
          }
        }
        &--2 {
          margin: 0 auto;
          left: -35px;
          z-index: 2;
          @media $smWidth {
            absolute((40*100/640)vw, (40*100/640)vw);
            right: (40*100/640)vw;
            z-index: 2;
          }
        }
        &--3 {
          absolute(-50px);
          left: calc(50% + 230px);
          z-index: 1;
          @media $smWidth {
            top: auto;
            bottom: 0;
            left: 0;
            width: (220*100/640)vw;
            z-index: 3;
          }
        }
      }
    }
  }
}