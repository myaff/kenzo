.page {
  &--fashion {
    .detail-section {
      &__img {
        img {
          display: block;
          margin: 0 auto;
        }
      }
    }
    .detail-section--1 .detail-section {
      &__imgs {
        margin-top: 120px;
        @media $smWidth {
          margin-top: (48*100/640)vw;
          margin-bottom: (48*100/640)vw;
          height: (640*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(-90px);
          right: calc(50% + 330px);
          z-index: 3;
          @media $smWidth {
            top: auto;
            left: 0;
            right: auto;
            bottom: 0;
            size((290*100/640)vw, 80vw);
            
            img {
              size(auto, 100%);
            }
          }
        }
        &--2 {
          margin: 0 auto;
          z-index: 2;
          @media $smWidth {
            absolute(0vw);
            right: 0;
            size((460*100/640)vw, (366*100/640)vw);
            overflow: hidden;
            
            img {
              size(auto, 100%);
              absolute(0px, 50%);
              transform: translateX(-50%) scale(-1, 1);
            }
          }
        }
        &--3 {
          absolute(-70px);
          left: calc(50% + 170px);
          z-index: 1;
          @media $smWidth {
            top: auto;
            left: auto;
            bottom: 0;
            right: -12vw;
            width: (430*100/640)vw;
          }
        }
      }
    }
    .detail-section--2 .detail-section {
      &__imgs {
        margin-bottom: 50px;
        @media $smWidth {
          margin-top: (38*100/640)vw;
          margin-bottom: (48*100/640)vw;
          height: (740*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(150px);
          right: calc(50% + 180px);
          @media $smWidth {
            top: 0;
            left: 0;
            right: auto;
            size((230*100/640)vw, 80vw);
            z-index: 1;
            
            img {
              absolute(0px, 50%);
              size(auto, 100%);
              transform: translateX(-50%);
            }
          }
        }
        &--2 {
          margin: 0 auto;
          @media $smWidth {
            absolute((64*100/640)vw, (40*100/640)vw);
            right: (40*100/640)vw;
            
            img {
              max-width: 100%;
            }
          }
        }
        &--3 {
          absolute(150px);
          left: calc(50% + 160px);
          @media $smWidth {
            top: auto;
            bottom: 0;
            left: auto;
            right: 0;
            size((230*100/640)vw, (520*100/640)vw);
            z-index: 1;
            
            img {
              absolute(0px, 50%);
              size(auto, 100%);
              transform: translateX(-50%);
            }
          }
        }
      }
    }
    .detail-section--3 .detail-section {
      &__imgs {
        margin-top: 30px;
        margin-bottom: 70px;
        @media $smWidth {
          margin-top: (56*100/640)vw;
          margin-bottom: (32*100/640)vw;
          height: (590*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(90px);
          right: calc(50% + 230px);
          z-index: 2;
          @media $smWidth {
            top: 0;
            right: 0;
            size((286*100/640)vw, 60vw);
            z-index: 3;
            
            img {
              max-width: 100%;
            }
          }
        }
        &--2 {
          margin: 0 auto;
          z-index: 1;
          @media $smWidth {
            absolute((32*100/640)vw, -12vw);
            right: 33.25vw;
            z-index: 2;
            
            img {
              max-width: 100%;
            }
          }
        }
        &--3 {
          absolute(-30px);
          left: calc(50% + 250px);
          z-index: 2;
          @media $smWidth {
            top: auto;
            left: auto;
            right: 0;
            bottom: 0;
            size((256*100/640)vw);
            z-index: 3;
            
            img {
              absolute(0px, 0px);
              size(100%, auto);
            }
          }
        }
      }
    }
    .detail-section--4 .detail-section {
      &__imgs {
        margin-top: 50px;
        @media $smWidth {
          margin-top: (56*100/640)vw;
          margin-bottom: (32*100/640)vw;
          height: (700*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(-60px);
          right: calc(50% + 250px);
          z-index: 1;
          @media $smWidth {
            top: 0;
            left: 0;
            size((320*100/640)vw, 63vw);
            z-index: 2;
          }
        }
        &--2 {
          margin: 0 auto;
          left: -40px;
          z-index: 2;
          @media $smWidth {
            absolute(15vw);
            left: auto;
            right: 0;
            width: (340*100/640)vw;
            z-index: 3;
            
            img {
              max-width: 100%;
            }
          }
        }
        &--3 {
          absolute(-40px);
          left: calc(50% + 170px);
          z-index: 1;
          @media $smWidth {
            top: auto;
            bottom: 0;
            left: 9vw;
            size((364*100/640)vw, (416*100/640)vw);
            z-index: 1;
            
            img {
              absolute(0, 0px, 0px);
              size(auto, 100%);
            }
          }
        }
      }
    }
    .end-screen {
      &__logo {
        margin-left: 170px;
      }
    }
  }
}