.page {
  &--fashion {
    .detail-section {
      &__img {
        img {
          display: block;
          margin: 0 auto;
        }
      }
    }
    .detail-section--1 .detail-section {
      &__imgs {
        margin-top: 120px;
      }
      &__img {
        &--1 {
          absolute(-90px);
          right: calc(50% + 330px);
          z-index: 3;
        }
        &--2 {
          margin: 0 auto;
          z-index: 2;
        }
        &--3 {
          absolute(-70px);
          left: calc(50% + 170px);
          z-index: 1;
        }
      }
    }
    .detail-section--2 .detail-section {
      &__imgs {
        margin-bottom: 50px;
      }
      &__img {
        &--1 {
          absolute(150px);
          right: calc(50% + 180px);
        }
        &--2 {
          margin: 0 auto;
        }
        &--3 {
          absolute(150px);
          left: calc(50% + 160px);
        }
      }
    }
    .detail-section--3 .detail-section {
      &__imgs {
        margin-top: 50px;
      }
      &__img {
        &--1 {
          absolute(-60px);
          right: calc(50% + 250px);
          z-index: 1;
        }
        &--2 {
          margin: 0 auto;
          left: -40px;
          z-index: 2;
        }
        &--3 {
          absolute(-40px);
          left: calc(50% + 170px);
          z-index: 1;
        }
      }
    }
    .detail-section--4 .detail-section {
      &__imgs {
        margin-top: 30px;
        margin-bottom: 70px;
      }
      &__img {
        &--1 {
          absolute(90px);
          right: calc(50% + 230px);
          z-index: 2;
        }
        &--2 {
          margin: 0 auto;
          z-index: 1;
        }
        &--3 {
          absolute(-30px);
          left: calc(50% + 250px);
          z-index: 2;
        }
      }
    }
  }
}