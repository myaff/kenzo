.page {
  &--detail {
    padding-top: 0;
    .start-screen {
      size(100%, 100vh);
      background: url('../img/placeholder.jpg') center no-repeat;
      background-size: cover;
      padding: (110*100/950)vh 0;
      color: white;
      text-align: center;
      
      @media $smWidth {
        padding: (185*100/1000)vh 0 (67*100/1000)vh;
        flexy(stretch, center, column, nowrap);
        background: url('../img/placeholder-mobile.jpg') center no-repeat;
        background-size: cover;
        
        .l-container {
          flex: 0 0 auto;
        }
        
        &::after {
          content: '';
          display: block;
          width: 1px;
          flex: 1 1 auto;
          margin-top: (35*100/1000)vh;
          background: white;
        }
      }
      
      &__nav {
        margin-bottom: (100*100/950)vh;
        @media $smWidth {
          display: none;
        }
      }
      
      &__title {
        font: 300 (90*100/950)vh/1.11 $font-util;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        @media $smWidth {
          font-size: 10vw;
          letter-spacing: 0.1em;
        }
      }
      
      &__text {
        font: 22px/1.45 $font-base;
        letter-spacing: 0.02em;
        margin-top: (50*100/950)vh;
        @media $smWidth {
          font-size: (25*100/640)vw;
        }
      }
    }
    
    .detail-sections {
      &__btn {
        @media $smWidth {
          absolute(0, 0px);
          bottom: (170*100/640)vw;
          width: 100%;
          text-align: center;
        }
      }
    }
    
    .detail-section {
      padding: 5rem 0 2.5rem;
      color: white;
      
      @media $smWidth {
        padding: (40*100/640)vw 0 (60*100/640)vw;
        
        &--1 {
          padding-top: (80*100/640)vw;
        }
      }
      
      &__title {
        font: 600 50px/1 $font-base;
        letter-spacing: 0.1em;
        text-align: center;
        margin-bottom: 1em;
        
        @media $smWidth {
          font-size: (50*100/640)vw;
          margin: 0 (32*100/640)vw (40*100/640)vw;
        }
      }
      
      &__text {
        font: 22px/1.45 $font-base;
        letter-spacing: 0.02em;
        margin-bottom: 3rem;
        
        @media $smWidth {
          font-size: (22*100/640)vw;
          margin: 0 (40*100/640)vw 0;
          
          &--1 {
            order: -1;
          }
          &--2 {
            order: 1;
          }
        }
      }
      
      &__imgs {
        display: flex!important;
        @media $smWidth {
          order: 0;
        }
        .js-wave {
          absolute(0px, 0px);
          size(100%);
        }
      }
      &__img {
        overflow: hidden;
      }
    }
  }
}
