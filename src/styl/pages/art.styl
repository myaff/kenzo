.page {
  &--art {
    .detail-section {
      &__img {
        img {
          display: block;
          margin: 0 auto;
        }
      }
    }
    .detail-section--1 .detail-section {
      &__imgs {
        margin-bottom: 80px;
        @media $smWidth {
          margin-top: (48*100/640)vw;
          margin-bottom: (48*100/640)vw;
          height: (536*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(380px);
          right: calc(50% + 230px);
          z-index: 2;
          @media $smWidth {
            top: auto;
            left: (40*100/640)vw;
            right: auto;
            bottom: 0;
            width: (240*100/640)vw;
          }
        }
        &--2 {
          margin: 0 auto;
          z-index: 1;
          @media $smWidth {
            absolute((108*100/640)vw);
            right: 0;
            size((460*100/640)vw, (366*100/640)vw);
            overflow: hidden;
            z-index: 3;
            
            img {
              size(auto, 100%);
              absolute(0px, 50%);
              transform: translateX(-50%) scale(-1, 1);
            }
          }
        }
        &--3 {
          absolute(410px);
          left: calc(50% + 90px);
          z-index: 2;
          @media $smWidth {
            top: 0;
            left: 0;
            width: (340*100/640)vw;
          }
        }
      }
    }
    .detail-section--2 .detail-section {
      &__imgs {
        margin-top: 130px;
        @media $smWidth {
          margin-top: (38*100/640)vw;
          margin-bottom: (48*100/640)vw;
          height: (610*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(-90px);
          right: calc(50% + 160px);
          @media $smWidth {
            top: 0;
            left: 0;
            right: auto;
            width: (280*100/640)vw;
          }
        }
        &--2 {
          margin: 0 auto;
          left: 10px;
          @media $smWidth {
            absolute((50*100/640)vw, (50*100/640)vw);
            right: (50*100/640)vw;
            z-index: 2;
          }
        }
        &--3 {
          absolute(-80px);
          left: calc(50% + 280px);
          @media $smWidth {
            top: auto;
            left: auto;
            right: 0;
            bottom: 0;
            size((300*100/640)vw, (500*100/640)vw);
            z-index: 1;
          }
        }
      }
    }
    .detail-section--3 .detail-section {
      &__imgs {
        margin-top: 80px;
        @media $smWidth {
          margin-top: (56*100/640)vw;
          margin-bottom: (32*100/640)vw;
          height: (640*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(-60px);
          right: calc(50% + 170px);
          z-index: 3;
          @media $smWidth {
            top: auto;
            bottom: 0;
            right: 0;
            width: (300*100/640)vw;
            height: (300*100/640)vw;
            z-index: 3;
            
            img {
              absolute(0px, auto, 0, 0px);
            }
          }
        }
        &--2 {
          margin: 0 auto;
          z-index: 2;
          @media $smWidth {
            absolute((40*100/640)vw, (60*100/640)vw);
            right: 0;
            z-index: 2;
          }
        }
        &--3 {
          absolute(-100px);
          left: calc(50% + 230px);
          z-index: 1;
          @media $smWidth {
            top: 0;
            left: 0;
            width: (300*100/640)vw;
            z-index: 1;
          }
        }
      }
    }
  }
}

canvas{
  top: 0 !important;
  left: 0 !important;
  position: absolute;
  transform: scaleX(1.05) !important;
}

.start-screen{
  & > .l-container{
    position: relative;
    z-index: 2;
  }
}