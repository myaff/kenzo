.page {
  &--art {
    .detail-section {
      &__img {
        img {
          display: block;
          margin: 0 auto;
        }
      }
    }
    .detail-section--1 .detail-section {
      &__imgs {
        margin-top: 180px;
      }
      &__img {
        &--1 {
          absolute(-120px);
          right: calc(50% + 250px);
        }
        &--2 {
          margin: 0 auto;
        }
        &--3 {
          absolute(-100px);
          left: calc(50% + 90px);
        }
      }
    }
    .detail-section--2 .detail-section {
      &__imgs {
        margin-bottom: 80px;
      }
      &__img {
        &--1 {
          absolute(380px);
          right: calc(50% + 230px);
          z-index: 2;
        }
        &--2 {
          margin: 0 auto;
          z-index: 1;
        }
        &--3 {
          absolute(410px);
          left: calc(50% + 90px);
          z-index: 2;
        }
      }
    }
    .detail-section--3 .detail-section {
      &__imgs {
        margin-top: 130px;
      }
      &__img {
        &--1 {
          absolute(-90px);
          right: calc(50% + 160px);
        }
        &--2 {
          margin: 0 auto;
          left: 10px;
        }
        &--3 {
          absolute(-80px);
          left: calc(50% + 280px);
        }
      }
    }
    .detail-section--4 .detail-section {
      &__imgs {
        margin-top: 150px;
        margin-bottom: 60px;
      }
      &__img {
        &--1 {
          absolute(-60px);
          right: calc(50% + 170px);
          z-index: 3;
        }
        &--2 {
          margin: 0 auto;
          z-index: 2;
        }
        &--3 {
          absolute(-100px);
          left: calc(50% + 230px);
          z-index: 1;
        }
      }
    }
  }
}

canvas{
  top: 0 !important;
  left: 0 !important;
  position: absolute;
  transform: scaleX(1.05) !important;
}

.start-screen{
  & > .l-container{
    position: relative;
    z-index: 2;
  }
}