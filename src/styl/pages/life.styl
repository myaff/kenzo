.page {
  &--life {
    .detail-section {
      &__img {
        img {
          display: block;
          margin: 0 auto;
        }
      }
    }
    .detail-section--1 .detail-section {
      &__imgs {
        margin-top: 160px;
      }
      &__img {
        &--1 {
          absolute(-90px);
          right: calc(50% + 330px);
        }
        &--2 {
          margin: 0 auto;
        }
        &--3 {
          absolute(-70px);
          left: calc(50% + 170px);
        }
      }
    }
    .detail-section--2 .detail-section {
      &__imgs {
        margin-top: 90px;
        margin-bottom: 50px;
      }
      &__img {
        &--1 {
          absolute(230px);
          right: calc(50% + 230px);
          z-index: 2;
        }
        &--2 {
          margin: 0 auto;
          left: -35px;
          z-index: 1;
        }
        &--3 {
          absolute(20px);
          left: calc(50% + 150px);
          z-index: 2;
        }
      }
    }
    .detail-section--3 .detail-section {
      &__imgs {
        margin-top: 170px;
      }
      &__img {
        &--1 {
          absolute(-80px);
          right: calc(50% + 250px);
          z-index: 2;
        }
        &--2 {
          margin: 0 auto;
          left: -35px;
          z-index: 1;
        }
        &--3 {
          absolute(-60px);
          left: calc(50% + 230px);
          z-index: 2;
        }
      }
    }
    .detail-section--4 .detail-section {
      &__imgs {
        margin-bottom: 40px;
      }
      &__img {
        &--1 {
          absolute(155px);
          right: calc(50% + 195px);
          z-index: 2;
        }
        &--2 {
          margin: 0 auto;
          left: -10px;
          z-index: 1;
        }
        &--3 {
          absolute(225px);
          left: calc(50% + 160px);
          z-index: 2;
        }
      }
    }
  }
}