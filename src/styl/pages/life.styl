.page {
  &--life {
    .detail-section {
      &__img {
        img {
          display: block;
          margin: 0 auto;
          
          @media $smWidth {
            width: 100%;
          }
        }
      }
    }
    .detail-section--1 .detail-section {
      &__imgs {
        margin-top: 160px;
        
        @media $smWidth {
          margin-top: (48*100/640)vw;
          margin-bottom: (48*100/640)vw;
          height: (536*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(-90px);
          right: calc(50% + 330px);
          @media $smWidth {
            top: auto;
            left: (40*100/640)vw;
            right: auto;
            bottom: 0;
            width: (240*100/640)vw;
          }
        }
        &--2 {
          margin: 0 auto;
          @media $smWidth {
            absolute((108*100/640)vw);
            right: 0;
            size((460*100/640)vw, (366*100/640)vw);
            overflow: hidden;
            
            img {
              size(auto, 100%);
              absolute(0px, 50%);
              transform: translateX(-50%) scale(-1, 1);
            }
          }
        }
        &--3 {
          absolute(-70px);
          left: calc(50% + 170px);
          @media $smWidth {
            top: 0;
            left: 0;
            width: (340*100/640)vw;
          }
        }
      }
    }
    .detail-section--2 .detail-section {
      &__imgs {
        margin-top: 90px;
        margin-bottom: 50px;
        @media $smWidth {
          margin-top: (38*100/640)vw;
          margin-bottom: (48*100/640)vw;
          height: (570*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(230px);
          right: calc(50% + 230px);
          z-index: 3;
          @media $smWidth {
            top: 0;
            left: 0;
            right: auto;
            width: (280*100/640)vw;
          }
        }
        &--2 {
          margin: 0 auto;
          left: -35px;
          z-index: 2;
          @media $smWidth {
            absolute((140*100/640)vw, (40*100/640)vw);
            right: (40*100/640)vw;
          }
        }
        &--3 {
          absolute(20px);
          left: calc(50% + 150px);
          z-index: 3;
          @media $smWidth {
            top: (40*100/640)vw;
            left: auto;
            right: 0;
            size((470*100/640)vw, (280*100/640)vw);
            z-index: 1;
            transform: rotate(-90deg) translateY(-100%);
            transform-origin: top right;
          }
        }
      }
    }
    .detail-section--3 .detail-section {
      &__imgs {
        margin-top: 170px;
        @media $smWidth {
          margin-top: (56*100/640)vw;
          margin-bottom: (32*100/640)vw;
          height: (470*100/640)vw;
        }
      }
      &__img {
        &--1 {
          absolute(-80px);
          right: calc(50% + 250px);
          z-index: 2;
          @media $smWidth {
            top: 0;
            right: 0;
            width: (350*100/640)vw;
            z-index: 1;
          }
        }
        &--2 {
          margin: 0 auto;
          left: -35px;
          z-index: 1;
          @media $smWidth {
            absolute((40*100/640)vw, (40*100/640)vw);
            right: (40*100/640)vw;
            z-index: 2;
          }
        }
        &--3 {
          absolute(-60px);
          left: calc(50% + 230px);
          z-index: 2;
          @media $smWidth {
            top: 0;
            left: 0;
            width: (220*100/640)vw;
            z-index: 3;
          }
        }
      }
    }
    .detail-section--4 {
      @media $smWidth {
        padding-bottom: 0;
      }
    }
    .detail-section--4 .detail-section {
      &__imgs {
        margin-bottom: 80px;
        @media $smWidth {
          margin-top: (80*100/640)vw;
          margin-bottom: 0;
          order: 3;
          height: (560*100/640)vw;
          background: url('../img/life/section-4-mobile.jpg') center no-repeat;
          background-size: cover;
        }
      }
      &__img {
        @media $smWidth {
          display: none;
        }
        &--1 {
          absolute(155px);
          right: calc(50% + 195px);
          z-index: 2;
        }
        &--2 {
          margin: 0 auto;
          left: -10px;
          z-index: 1;
        }
        &--3 {
          absolute(225px);
          left: calc(50% + 160px);
          z-index: 2;
        }
      }
    }
  }
}