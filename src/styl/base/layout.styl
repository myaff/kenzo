/* ==========================================================================
  BASIC - LAYOUT
   ========================================================================== */
html, body {
  background: $white;
  font: normal $font-size-base/1.5 $font-base;
  color: $black;
  
  .is-scrolling {
    pointer-events: none;
  }
}
body {
  overflow-x: hidden;
}
.l-container {
  relative();
  margin-right: auto
  margin-left: auto
  width: 100%;
  //min-width: ($container-widths.min + $grid-gutter);
  max-width: ($container-widths.max + $grid-gutter);
  padding: 0 ($grid-gutter / 2);
  
  &-fluid {
    relative();
    margin-right: auto
    margin-left: auto
    width: 100%;
    padding: 0 ($grid-gutter / 2);
    max-width: 1150px;
    @media $lgWidth {
      max-width: 1280px;
      padding: 0;
    }
  }
}

.layout {
  min-size($container-widths.min, 100vh);
  width: 100vw;
  background: linear-gradient(38deg, #081f33 0%, #2193a1 100%);
  background-attachment: fixed;
  
  flexy(flex-start, center, nowrap, column);
  > div {
    width: 100%;
    flex: 0 0 auto;
    
    ^[0]--home & {
      opacity: 0;
      .is-loaded & {
        opacity: 1;
      }
    }
  }
  .page {
    flex-grow: 1;
    opacity: 1;
  }
}

.page {
  padding-top: 70px;
}

.l-spacer {
  flex-grow: 1
}

.l-float {
  &--left {
    float: left;
    
    ^[0]--outside& {
      margin-left: -52%;
    }
  }
  &--right {
    float: right;
  
    ^[0]--outside& {
      margin-right: -52%;
    }
  }
  &--outside {
    width: 75%;
  }
}

.st {
  position: static;
}

video {
  display: block;
  width: 100%;
  height: auto;
}