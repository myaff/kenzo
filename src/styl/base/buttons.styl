.btn {
  display: inline-block;
  font-size: 1rem;
  line-height: 1;
  font-weight: 500;
  text-align: center;
  vertical-align: middle;
  padding: 1em 3.5em;
  border: 1px solid white;
  border-radius: 0;
  box-sizing: border-box;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  box-shadow: none;
  transition: all 0.3s;
  cursor: pointer;
  background: transparent;
  color: white;
  
  @media $xsWidth {
    font-size: (20*100/640)vw;
    padding: 1.25em 3.3em;
  }
  
  {hover-focus-acitve} {
    outline: 0;
  }
  
  .no-touch &:hover {
    background: white;
    color: black;
  }
  .touch &:active {
    background: white;
    color: black;
  }
  
  // **** sizes ****
  &--small {
    font-size: 15px;
    padding: 11px 2rem 12px;
    min-width: 160px;
  }
  &--big {
    padding: 20px;
  }
  
  // **** themes  ****
  &--primary {
    color: $white;
    background: $primary;
    border-color: transparent;
    
    {hover-focus-active} {
      color: $white;
      background: darken($primary, 20%);
      border-color: transparent;
    }
  }
  &--secondary {
    color: white;
    background: #01426a;
    border-color: transparent;
    
    {hover-focus-active} {
      color: $black;
      background: darken(#01426a, 20%);
      border-color: transparent;
    }
  }
  &--primary-outline {
    color: $primary;
    background: transparent;
    border-color: $primary;
    
    {hover-focus-active} {
      color: $white;
      background: $primary;
    }
  }
  &--secondary-outline {
    color: $black;
    background: transparent;
    border-color: $black;
    
    {hover-focus-active} {
      color: $white;
      background: $black;
    }
  }
  
  &--plain {
    padding: 0;
    border: 0;
    border-radius: 0;
    font-size: 14px;
    min-width: 0;
    
    background: transparent;
    color: inherit;
  }
  
  &--block {
    display: block;
    width: 100%;
  }
  
  &--mwide {
    @media $mobile {
      display: block;
      width: 100%;
    }
  }
  
  &--link {
    font-weight: normal;
    font-size: inherit;
    color: $primary;
    text-transform: none;
    padding: 0;
    background: none;
  }
  
  .icon + span {
    margin-left: 1em;
  }
}